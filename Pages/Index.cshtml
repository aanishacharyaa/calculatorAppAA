@page
@model calculatorAppAA.Pages.IndexModel
@{
    ViewData["Title"] = "Calculator App";
}


<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="text" asp-for="Number1" /> <!-- Input field for the first number -->
    <select asp-for="Operator">
        <!-- Dropdown to select the operator -->
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="*">*</option>
        <option value="/">/</option>
    </select>
    <input type="text" asp-for="Number2" /> <!-- Input field for the second number -->
    <button type="submit">Calculate</button>
</form>

<h3>Result: @Model.Result</h3>